<html>
<head>
    <title><%- data.pageTitle %></title>

    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <link href="stylesheets/style.css" rel="stylesheet" type="text/css">

    <script src="https://code.jquery.com/jquery-1.11.3.min.js"></script>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <!-- Optional theme -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <!-- Signin CSS -->
</head>
<body>
<div id="header">
    <button id="showMenu" type="button" class="btn btn-default" aria-label="Left Align">
        <span class="glyphicon glyphicon-align-justify" aria-hidden="true"></span>
    </button>
    <h1 id="title"><%- data.pageTitle %></h1>

</div>


<% include partials/menu %>

<div id="cunt">

    <% Object.keys(data.pageContent).forEach(function(obj) { %>
    <%  if( data.pageContent[obj].indexOf('<h3>') !== -1 || data.pageContent[obj].indexOf('<img') !== -1){ %>
    <%- data.pageContent[obj] %>
    <%}else{%>
    <p><%-data.pageContent[obj] %></p>
    <% }%>
    <%});%>

</div>
<div id="homePageContainer">
    <center><h3 id="homePageContainerTitle">
           <%= data.footNote %>
        </h3></center>
</div>


<hr/>
<center><img src="/qld-health-logo.jpg" id="AboutUsImg" alt="Qld Health" class="img-thumbnail"></center>
<br/>
</body>

<script>

    $('#showMenu').click(function(){
        if($('#mainMenu').hasClass('hidden')){
            $('#mainMenu').removeClass('hidden').addClass('visible');
            $('#mainMenu').addClass('color');
            $('#mainMenu').animate({left: '0'}, 1000);
        }else{
            $('#mainMenu').animate({left: '-300px'}, 1000);
            setTimeout( function(){
                $('#mainMenu').removeClass('visible').addClass('hidden');
            }, 1000);
        }
    });

</script>


</html>